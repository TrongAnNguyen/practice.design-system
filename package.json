{
  "name": "@ds.e/scss",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "normalize-scss": "^7.0.1"
  },
  "scripts": {
    "lint": "stylelint ./**/*.scss",
    "lint:fix": "stylelint --fix ./**/*.scss",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.scss": "yarn lint:fix"
  },
  "devDependencies": {
    "husky": "^7.0.0",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.1",
    "stylelint": "^14.6.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-prettier": "^2.0.0"
  }
}
